<div class="mordal-background">
  <div class="mordal-post">
    <div>
      <strong>
        <a href="/<%= post.user.username %>" class="mordal-post-nick-name"><%= post.user.nickname %>
        </a>
      </strong>
    </div>
    <div>
      <b class="mordal-post-username"><%= post.user.username %></b>
    </div>
    <div>
      <p class="post-text">
        <%= post.text %>
        </p>
    </div>
    <% if post.user_id == current_user.id %>
      <div>
        <form action="/post/<%= post.id %>/delete" method="post">
          <input type="submit" value="削除">
        </form>
      </div>
    <% end %>
  </div>
</div>
<style>
* {
    margin: 0;
    padding: 0;
    font-family: "東青梅ゴシック";
    height: 100%;
    color: #4a4a4a;
  }

  div {
    height: auto;
  }

  a {
    text-decoration: none;
  }

  input {
    padding: 0;
    border: none;
    border-radius: 0;
    outline: none;
    background: none;
  }

  body {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .mordal-background {
    top: 0;
    left: 0;
    background-color: #000;
    opacity: 0.55;
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: 10;
  }

  .mordal-post {
    top: 50%;
    left: 50%;
    transform: translate( -50%,-50% );
    width: 300px;
    height: 200px;
    z-index: 11;
    position: absolute;
  }
</style>