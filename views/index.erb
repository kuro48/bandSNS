<% if !current_user.nil? %>
  <div class="home-page">
    <div class="home-left">
    </div>
    <div class="home-main">
      <div class="newpost-box">
        <form action="/newpost" method="post">
          <div class="newpost">
            <div>
              <input name="text" type="text" placeholder="今日は練習した？" class="new-form">
            </div>
            <div>
              <input type="submit" value="投稿">
            </div>
          </div>
        </form>
      </div>
      <div class="post-scroll">
        <% @posts.each do |post| %>
          <div class="post">
            <div class="post-user">
              <div class="post-nickname">
                <b>
                  <a href="/users/<%= post.user.username %>">
                    <%= post.user.nickname %>
                </b>
              </div>
              <div>
                <b class="post-username">
                  @<%= post.user.username %>
                </b>
              </div>
            </div>
            <a class="mordal-post-open" data-id="<%= post.id %>">
              <div>
                <p class="post-text">
                  <%= post.text %>
                </p>
              </div>
            </a>
              <% if post.user_id == current_user.id %>
                <div>
                  <form action="/post/<%= post.id %>/delete" method="post">
                    <input type="submit" value="削除">
                  </form>
                </div>
              <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="home-right">
    </div>
  </div>
  <div class="mordal">
  </div>
<% end %>
<script>
  $(function(){
    $(".mordal-post-open").click(function(){
      var postId = $(this).data('id');
      $.ajax({
        url: '/mordal',
        type: 'GET',
        data: {
          id: postId
        },
        success: function( data ){
          $(".mordal").html(data).css('display', 'block');
        }
      });
    });

    $(document).on("click", ".mordal-background", function(){
      $(".mordal").css('display', 'none')
    });
  });
</script>

<style>
  * {
      margin: 0;
      padding: 0;
      font-family: "東青梅ゴシック";
      height: 100%;
      color: #4a4a4a;
  }

  div {
    height: auto;
  }

  a {
    text-decoration: none;
  }

  input {
    padding: 0;
    border: none;
    border-radius: 0;
    outline: none;
    background: none;
  }

  body {
    width: 100%;
    height: 100%;
    position: relative;
  }
  @media (min-width: 700px){
    .home-page {
      display: flex;
    }

    .home-right,
    .home-left {
      flex: 1;
    }

    .home-main {
      flex: 2;
    }
  }

  .home-page {
    margin-top: 46px;
    height: 100%;
    background-color: #e6ecef;
  }

  .home-main {
    align-self: stretch;
    position: relative;
    background-color: #fff;
  }

  .mordal {
    top: 0;
    left: 0;
    display: none;
    width: 100%;
    height: 100%;
    position: absolute;
  }

  .newpost-box {
    height: 70px;
  }

  .newpost {
    position: absolute;
    left: 50%;
    transform: translate(-50%);
    width: 100%;
    border-bottom: 1px solid rgba(74,74,74);
    height: 66px;
  }


  .post-user {
    height: 30px;
  }

  .post-nickname {
    overflow: hidden;
  }

  .post-username {
    float: left;
  }
</style>