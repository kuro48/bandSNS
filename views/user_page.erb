<div class="user_page">
  <div>
    <li>
      <%= current_user.nickname %>
    </li>
    <ul>
      <% if !current_user.discription.nil? %>
        <li>
          <%= current_user.discription %>
        </li>
      <% end %>
    </ul>
    <a href="/<%= current_user.username %>/useredit">
      プロフィールを編集する
    </a>
  </div>
  <div class="post-scroll">
    <% @posts.each do |post| %>
      <div class="post">
        <div class="post-user">
          <div class="post-nickname">
            <b>
              <a href="/users/<%= post.user.username %>">
                <%= post.user.nickname %>
              </a>
            </b>
          </div>
          <div>
            <b class="post-username">
              @<%= post.user.username %>
            </b>
          </div>
        </div>
        <a id="mordal-post-open" class="mordal-post-open">
          <div>
            <p class="post-text">
              <%= post.text %>
            </p>
          </div>
        </a>
          <% if post.user_id == current_user.id %>
            <div>
              <form action="/post/<%= post.id %>/delete" method="post">
                <input type="submit" value="削除">
              </form>
            </div>
          <% end %>
      </div>
      <div class="mordal" id="mordal-post">
      </div>
    <% end %>
  </div>
</div>
<style>
* {
    margin: 0;
    padding: 0;
    font-family: "東青梅ゴシック";
    height: 100%;
    color: #4a4a4a;
  }

  div {
    height: auto;
  }

  a {
    text-decoration: none;
  }

  input {
    padding: 0;
    border: none;
    border-radius: 0;
    outline: none;
    background: none;
  }

  body {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .user_page{
    padding-top: 46px;
  }
  </style>