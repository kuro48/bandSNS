<div>
  <div>
    <li><%= current_user.nickname %></li>
    <ul>
      <% if !current_user.discription.nil? %>
        <li><%= current_user.discription %></li>
      <% end %>
    </ul>
    <a href="/<%= current_user.username %>/useredit">プロフィールを編集する</a>
  </div>
  <div>
    <% @posts.each do |post| %>
    <div>
      <div>
        <div>
          <strong><a href="/<%= post.user.username %>"><%= post.user.nickname %></a></strong>
        </div>
        <div>
          <b><%= post.user.username %></b>
        </div>
      </div>
      <div></div>
            <p><%= post.text %></p>
      </div>
    </div>
  <% end %>
  </div>
</div>